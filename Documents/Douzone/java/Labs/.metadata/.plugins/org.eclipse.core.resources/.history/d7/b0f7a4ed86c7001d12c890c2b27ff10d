
public class Ex10_Statement {

	public static void main(String[] args) {
		
		//반복문 (while, do ~ while)
//		int i = 10;
//		while (i>=10) { //true
//			// 반드시
//			// 증가감을 통해서 true, false 판단
//
//			// --i; -> 9 
//			System.out.println(i);
//			// --i; -> 10
//		}
		
		// while 1~100까지의 합
		int j = 1;
		int sum = 0;
		while (j<=100) {
			sum += j;
			j++;
		}
		System.out.println(sum);
		
		
		// while(true) {} 메뉴만들어서 ...
		// while로 구구단 만들기
		int i = 1;
		int z = 1;
		while (i <= 9) {
			z = 1;
			while (z <=9) {
				System.out.printf("%d * %d = %d \n", i, z, i*z);
				z++;
			}
			i++; // 마지막 10
		}
	}

}
